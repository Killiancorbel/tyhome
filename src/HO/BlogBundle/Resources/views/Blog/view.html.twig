{% extends "HOBlogBundle::layout.html.twig" %}

{% block hoblog_body %}

{% for message in app.session.flashbag.get('info') %}
    <div class="alert alert-success" role="alert">
        {{ message }}
    </div>
  {% endfor %}

    {% if is_granted('ROLE_ADMIN') %}
    <div class="row">
    <a href="{{ path('ho_blog_index') }}" class="btn btn-primary" style="margin-top: 20px; margin-right: 10px;"><i class="glyphicon glyphicon-chevron-left" style="margin-right: 5px;"></i>Retour Ã  la liste</a>
    <a href="{{ path('ho_blog_edit', {'id': article.id}) }}" class="btn btn-warning" style="margin-top: 20px; margin-right: 10px;"><i class="glyphicon glyphicon-pencil" style="margin-right: 5px;"></i>Edit</a>
    <a href="{{ path('ho_blog_delete', {'id': article.id}) }}" class="btn btn-danger" style="margin-top: 20px;"><i class="glyphicon glyphicon-trash" style="margin-right: 5px;"></i>Delete</a>
    </div>
    {% endif %}

<div class="page-header"><h1>{{ article.title }}</h1></div>

<div class="well" style="text-align: justify; font-family: Verdana; font-size: 16px;"><img src="{{ article.image }}" width="100" height="100" style="float: left;" /><p>
  {{ article.content|raw }}<br />
  <br />
  <span style="font-style: italic; text-align: right;">{{ article.date|date('Y-m-d H:i') }}</span>
  </p>
</div>

  


{% endblock %}