{% extends "HOBlogBundle::layout.html.twig" %}

{% block hoblog_body %}

<div class="page-header"><h1>Articles</h1></div>

{% for message in app.session.flashbag.get('info') %}
    <div class="alert alert-success" role="alert">
        {{ message }}
    </div>
  {% endfor %}

  <a class="btn btn-success" style="margin-top: 10px;" href="{{ path('ho_blog_add') }}"><i class="glyphicon glyphicon-pencil" style="margin-right: 4px;"></i>Write an article</a>

  {% if articles != null %}
  {% for article in articles %}

  <a href="{{ path('ho_blog_view', {'id': article.id}) }}" style="color: #000000; text-decoration: none;"><div class="well" style="margin-top: 10px;">
  		<div class="row">
  			<div class="col-md-3">{% if article.image != null %}<img src="{{ article.image }}" width="80" height="80" />{% endif %}</div>
  			<div class="col-md-7"><h1>{{ article.title }}</h1></div>
  		</div>
  </div></a>

  {% endfor %}
  {% else %}
  	<div class="alert alert-info" role="alert" style="margin-top: 10px;">
  		No articles yet
  	</div>
  {% endif %}


{% endblock %}