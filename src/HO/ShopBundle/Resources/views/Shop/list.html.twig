{# src/HO/ShopBundle/Resources/views/Shop/list.html.twig #}

{% extends "HOShopBundle::layout.html.twig" %}

{% block hoshop_body %}

  <div class="page-header">
    <h1>Shop</h1>
  </div>

  <div class="container">
    <table class="table table">
            <thead>
              <tr style="font-size: 24px;">
                <th></th>
                <th>Product</th>
                <th>Price</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              {% for product in products %}
              <tr style="font-family: Verdana; font-size: 16px;">
                <td><img src="{{ product.image }}" alt="product image" width="150" height="100" /></td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}€</td>
                <td><button type="button" class="btn btn-primary"><i class="glyphicon glyphicon-shopping-cart" style="margin-right: 3px;"></i>Commander</button></td>
                </tr>
              {% endfor %}
            </tbody>
          </table>


      <div class="well"><i class="glyphicon glyphicon-info-sign"></i>
          Nos produits comprennent une license d'utilisation, la documentation disponible en ligne, ainsi qu'un service après vente
      </div>
  </div>
  

{% endblock %}