{# src/HO/UserBundle/Resources/views/Security/login.html.twig #}

{% extends "HOCoreBundle::layout.html.twig" %}

{% block body %}

  {% if error %}
    <div class="alert alert-danger">{{ error.message }}</div>
  {% endif %}

  <form action="{{ path('login_check') }}" method="post" style="padding: 40px;">
    <div class="form-group row">
    <label class="col-sm-2 col-form-label" for="username">Mail :</label>
      <div class="col-sm-5">
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" />
      </div>
    </div>

    <div class="form-group row">
    <label class="col-sm-2 col-form-label" for="password">Password :</label>
      <div class="col-sm-5">
        <input class="form-control" type="password" id="password" name="_password" />
      </div>
    </div>
    <button style="margin-top: 30px;" class="btn btn-success" type="submit">Connexion</button>
  </form>

{% endblock %}